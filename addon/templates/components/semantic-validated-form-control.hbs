{{#if (or label icon)}}
  <label>
    {{#if icon}}
      <i class={{concat icon " icon"}}></i>
    {{/if}}
    {{label}}
  </label>
{{/if}}
<div class="ui custom popup hidden" id={{popupId}}>
  {{popupMessage}}
</div>
<div class="popup-trigger">
  {{yield
    (hash
      focus-out=(action "onFocusOut")
      value=(mut (get model property))
    )
  }}
</div>